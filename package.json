{
	"name": "incantates",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "npm run smui-theme-light && npm run smui-theme-dark && yarn mixins",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
		"mixins": "sass --no-source-map -I node_modules src/mixins.scss static/mixins.css"
	},
	"devDependencies": {
		"@smui-extra/accordion": "^6.1.4",
		"@smui/button": "^6.1.4",
		"@smui/card": "^6.1.4",
		"@smui/common": "^6.1.4",
		"@smui/dialog": "^6.1.4",
		"@smui/form-field": "^6.1.4",
		"@smui/icon-button": "^6.1.4",
		"@smui/paper": "^6.1.4",
		"@smui/textfield": "^6.1.4",
		"@smui/top-app-bar": "^6.1.4",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "^1.0.0-next.507",
		"@types/bcrypt": "^5.0.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"autoprefixer": "^10.4.12",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"inversify": "^6.0.1",
		"postcss": "^8.4.17",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tailwindcss": "^3.1.8",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^4.4.0",
		"@sveltejs/adapter-node": "^1.0.0-next.96",
		"bcrypt": "^5.0.1",
		"smui-theme": "^6.2.0"
	}
}
